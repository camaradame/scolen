{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-wrapper">
            <div class="box">
                <form action="{{ path('fos_user_registration_register') }}"  method="POST" class="content-wrap fos_user_registration_register" >
                    <h6>Sign Up</h6>
                    {{ form_widget(form) }}
                    <div class="action">
                        <input class="btn btn-primary signup" style="background-color: mediumseagreen; color: white" type="submit">
                    </div>
                </form>
            </div>

            <div class="already">
                <p>Have an account already?</p>
                <a href="{{ path('fos_user_security_login') }}">Login</a>
            </div>
        </div>
    </div>
</div>

