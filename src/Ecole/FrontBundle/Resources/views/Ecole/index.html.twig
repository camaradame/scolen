{% extends ":layout:layout.html.twig" %}

{#{% block title %}EcoleFrontBundle:Ecole:index{% endblock %}#}
{% block stylesheets %}
    <link href="{{ asset('bower_components/jquery-ui/themes/redmond/jquery-ui.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('bower_components/datatables/media/css/dataTables.bootstrap.css') }}" rel="stylesheet" media="screen">
{% endblock %}


{% block body %}
    <div class="content-box-large">
        <div class="panel-heading">
            <div class="panel-title">Les écoles sénégalaises</div>
        </div>
        <div class="panel-body">
            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Adresse</th>
                    <th>Département</th>
                    <th>Région</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr class="gradeA">
                        <td>{{ entity.nom }}</td>
                        <td>{{ entity.adresse }}</td>
                        <td>{{ entity.departement }}</td>
                        <td>{{ entity.region }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <!-- jQuery UI -->
    <script src="{{ asset('bower_components/jquery-ui/jquery-ui.js') }}"></script>
    <script src="{{ asset('bower_components/datatables/media/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('bower_components/datatables/media/js/dataTables.bootstrap.js') }}"></script>
    <script src="{{ asset('js/tables.js') }}"></script>
{% endblock %}
